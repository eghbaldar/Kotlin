            app:layout_constraintTop_toBottomOf="@+id/view" />

        <ImageView
            android:id="@+id/btnWhatsapp"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:layout_marginEnd="60dp"
            android:tint="@color/green"
